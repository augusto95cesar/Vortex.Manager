<div class="body-container">
    <!-- Cabeçalho -->
    <header class="container mt-4">
        <div class="row">
            <div class="col-12">
                <h1 class="text-center">Bem-vindo ao Manager Notícias</h1>
                <p class="lead text-center">Gerencie suas notícias com eficiência e controle total.</p>
            </div>
        </div>
    </header>

    <!-- Card de Ações -->
    <section class="container mt-5">
        <div class="row">
            <div class="col-md-4">
                <div class="card text-white bg-primary mb-4">
                    <div class="card-header">Adicionar Notícia</div>
                    <div class="card-body">
                        <p>Insira nova notícia ao sistema.</p>
                        <a class="btn btn-light">Adicionar Notícias</a>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card text-white bg-success mb-4">
                    <div class="card-header">Visualizar Notícia</div>
                    <div class="card-body">
                        <p>Consulte todas as notícia cadastradas.</p>
                        <a class="btn btn-light" asp-area="" asp-controller="Noticias" asp-action="Index">Ver Notícia</a>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card text-white bg-warning mb-4">
                    <div class="card-header">Adicionar Usiário</div>
                    <div class="card-body">
                        <p>Insira novos usuários ao sistema.</p>
                        <a class="btn btn-light" asp-area="" asp-controller="AuthSystem" asp-action="Create">Adicionar Usiários</a>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>

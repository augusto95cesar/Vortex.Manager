@using Microsoft.AspNetCore.Authorization;
@inject IAuthorizationService AuthorizationService

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Vortex.Manager.WebApp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    @if (User.Identity.IsAuthenticated)
    {
        <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    }
    else
    {
        <link rel="stylesheet" href="~/css/authsystem.css" asp-append-version="true" />
    }

    <link rel="stylesheet" href="~/Vortex.Manager.WebApp.styles.css" asp-append-version="true" />

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body>
    @if (User.Identity.IsAuthenticated)
    {
        <header>
            <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
                <div class="container">
                    <a class="navbar-brand c-hover" asp-area="" asp-controller="Home" asp-action="Index">Vortex.Manager</a>

                    <button class="navbar-toggler c-hover" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                        <ul class="navbar-nav flex-grow-1">
                            @*                             <li class="nav-item">
                        <a class="nav-link text-dark c-hover" asp-area="" asp-controller="Noticias" asp-action="Index">Notícias</a>
                        </li> *@
                            <li class="nav-item">
                                <a class="nav-link text-dark c-hover" asp-area="" asp-controller="AuthSystem" asp-action="Logout">Sair</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
        </header>
    }

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    @if (User.Identity.IsAuthenticated)
    {
        <!-- Rodapé -->
        <footer id="footer-home" class="bg-dark text-white text-center py-3 mt-5">
            <p>&copy; 2025 Sistema de Gerenciamento de Notícias</p>
        </footer>
    }

    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
